<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="loginiti.LoginITIController" 
     xmlns:fx="http://javafx.com/fxml" 
     alignment="center" hgap="10" vgap="5" styleClass="root">
    
	<padding><Insets top="180" right="25" bottom="10" left="25"/></padding>
        
    <Text id="welcome-text" text="Welcome" 
        GridPane.columnIndex="0" GridPane.rowIndex="0" 
        GridPane.columnSpan="2"/>
 
    <Label text="Password:"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
 
    <PasswordField fx:id="passwordField" 
        GridPane.columnIndex="1" GridPane.rowIndex="2" 
        onKeyPressed="#handlePassFieldEnterKey"/>
        
    <HBox spacing="10" alignment="bottom_right" 
        GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Sign In" onAction="#handleSubmitButtonAction"/>
	</HBox>

	<Text fx:id="senhaDigitada"
       GridPane.columnIndex="0" GridPane.columnSpan="2"
 		GridPane.halignment="LEFT" GridPane.rowIndex="4"/>
 		
 	<Text fx:id="resultadoValida"
       GridPane.columnIndex="0" GridPane.columnSpan="2"
 		GridPane.halignment="LEFT" GridPane.rowIndex="5"/>
 		
 	<stylesheets>
    <URL value="@Login.css" />
  </stylesheets>

</GridPane>

